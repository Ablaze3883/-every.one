<%- include('partials/header') %>

<div class="main_body">
  <div class="navigator">
    <div class="everyone">
      <i class="material-icons main_icon">mail</i>
      <p>@every.one</p>
    </div>
    <a href="/"><div class="home active_navigator">
      <i class="material-icons home_icon">home</i>
      <p>Home</p>
    </div></a>
    <br />
    <a href="/history"><div class="history tab" href="/history">
      <i class="material-icons history_icon">history</i>
      <p>History</p>
    </div></a>
  </div>
  <div class="logs">
    <div class="log_header">
      <p class="log_title">Home</p>
      <div class="compose">
        <i class="material-icons add_icon">add</i>
        <p class="compose_text">Compose</p>
      </div>
    </div>
    <div class="log_body">

      <% mails.forEach(function (curr) { %>
      <a href="/mails/<%= curr.subject %>"><div class="message_row ">
        <div class="message_summary ">
          <p class="message_title"><%= curr.subject %></p>
          <p class="message_body"><%= curr.content.length > 40 ? curr.content.slice(0, 30) + "..." : curr.content  %></p>
        </div>
        <div>
          <p class="time"><%= curr.time[0] + ":" + curr.time[1] %></p>
        </div>
      </div></a>
      <%  }); %>

    </div>
  </div>
  <div class="mail">
    <div class="mail_compose">
      <p class="compose_title">New Compose :</p>
      <div class="container mt-5">
        <form action="/compose" method="POST">
          <div class="form-group field">
            <input
              type="text"
              class="form-control field_input"
              name="to"
              value=""
              placeholder="To:"
              onfocus="this.placeholder = ''"
              onblur="this.placeholder = 'To:'"
            />
          </div>
          <div class="form-group field">
            <input
              type="text"
              class="form-control field_input"
              name="cc"
              placeholder="Cc:"
              onfocus="this.placeholder = ''"
              onblur="this.placeholder = 'Cc:'"
            />
          </div>
          <div class="form-group field">
            <input
              type="text"
              class="form-control field_input"
              name="subject"
              placeholder="Subject:"
              onfocus="this.placeholder = ''"
              onblur="this.placeholder = 'Subject:'"
            />
          </div>
          <div class="form-group field2">
            <textarea
              id="summernote"
              class="form-control"
              name="content"
              rows="8"
              cols="80"
              placeholder="Content:"
            ></textarea>
          </div>
          <label class="scheduler_text" for="scheduler"
            >Choose a mail scheduler format:</label
          >
          <select id="scheduler" name="scheduler">
            <option value="Reccurent">Reccurent</option>
            <option value="Weekly">Weekly</option>
            <option value="Monthly">Monthly</option>
            <option value="Yearly">Yearly</option>
          </select>
          <button type="submit" class="btn btn-s">Send</button>
        </form>
      </div>
    </div>
  </div>
</div>




<%- include('partials/footer') %>
